<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.soulchavez.memorama.Puntajes"
    android:background="@drawable/backlila">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/titulosco"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_principiante"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:textColor="#ff33a9"
        android:textAlignment="center"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_experto"
        android:textSize="40dp"
        android:id="@+id/textView2"
        android:textColor="#362eff"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_medio"
        android:id="@+id/textView3"
        android:textSize="40dp"
        android:textColor="#9200ff"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/lblNivel1"
        android:textSize="40dp"
        android:textColor="#030102"
        android:textAlignment="center"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/lblNivel2"
        android:layout_alignStart="@+id/lblNivel2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/lblNivel2"
        android:textSize="40dp"
        android:textColor="#010001"
        android:textAlignment="center"
        android:layout_below="@+id/lblNivel1"
        android:layout_alignRight="@+id/imageView7"
        android:layout_alignEnd="@+id/imageView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/lblNivel3"
        android:textSize="40dp"
        android:textColor="#020001"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/lblNivel2"
        android:layout_alignStart="@+id/lblNivel2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="40dp"
        android:id="@+id/textView7"
        android:layout_marginBottom="31dp"
        android:textColor="#fff43c"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/total"
        android:textSize="40dp"
        android:textColor="#020001"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/lblNivel3"
        android:layout_alignStart="@+id/lblNivel3" />
</RelativeLayout>
